<div class="dashboard">

  <div class="sidebar sidebar-middle-blue dashboard-sidebar">

    <div class="user-infos my-5">
      <% if current_user.avatar.attached? %>
        <%= cl_image_tag current_user.avatar.key, class: 'avatar' %>
      <% else %>
        <%= image_tag 'blank_avatar.png', class: 'avatar' %>
      <% end %>
      <p><%= current_user.first_name %> <%= current_user.last_name %></p>
    </div>

    <div class="tabs-vertical w-100 mt-2 pt-5">
      <div class="tab-vertical tab-blue text-white text-center p-3"><p class='mb-0'>Mes emprunts</p><i class="fas fa-caret-right"></i></div>
      <div class="tab-vertical tab-blue text-white text-center p-3"><p class="mb-0">Évolution de mon collatéral</p></div>
      <div class="tab-vertical tab-blue text-white text-center p-3"><p class="mb-0">Mes informations</p></div>
    </div>

  </div>

  <div class="dashboard-right">

    <div class="dashboard-right-header">
      <h2 class="mb-3">Mon dashboard</h2>
    </div>

    <h3 class="my-loans-title mr-auto mb-4">Mes emprunts</h3>

    <div class="my-loans w-100 d-flex flex-column overflow-auto">
      <div class="loan-info-cards">
        <%= render 'loan-info-cards' %>
      </div>
    </div>

  </div>

</div>




