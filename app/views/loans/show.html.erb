<div class="container" id="show">
  <h2 class="show-header p-4">Loan for: <%=@loan.name%></h2>

  <ul class="tabs list-inline" id="mytabs">
    <li class="tab tab-horizontal list-inline-item active" id="resume">Resume</li>
    <li class="tab tab-horizontal list-inline-item" id="next-payment">Next payment</li>
    <li class="tab tab-horizontal list-inline-item" id="historical-payment">Historical payment</li>
  </ul>

  <div data-controller="update-status">
    <div class="resume">
      <h4>Please do the collateral's transfer to confirm the following transaction</h4>
      <p class="text-center p-3">Loan information</p>
      
      <div class="card-white p-3" id="loan-information">
        <div class="information-card-container mr-3">
          <div class="information-card">
            <div class="text-middle-blue border-b-middle-blue">Collatéral à déposer</div>
            <div class="font-weight-light">10 000 €</div>
          </div>
          <div class="information-card">
            <div class="text-middle-blue border-b-middle-blue">Capital emprunté</div>
            <div class="font-weight-light">4 000 €</div>
          </div>
          <div class="information-card">
            <div class="text-middle-blue border-b-middle-blue">Currency</div>
            <div class="font-weight-light">Ethereum</div>
          </div>
          <div class="information-card">
            <div class="text-middle-blue border-b-middle-blue">Intérêts par mois</div>
            <div class="font-weight-light">1,23€</div>
          </div>
          <div class="information-card">
            <div class="text-middle-blue border-b-middle-blue">Durée (mois)</div>
            <div class="font-weight-light">12</div>
          </div>
          <div class="information-card">
            <div class="text-middle-blue border-b-middle-blue">Loan to Value</div>
            <div class="font-weight-light">50%</div>
          </div>
        </div>
        <div class="button-container">
          <%= link_to 'Transfer the collateral', '#', class: "bouton btn-middle-blue"%>
          <%= link_to 'Edit', '#', class: "bouton btn-middle-blue"%>
          <%= link_to 'Cancel', '#', class: "bouton btn-middle-blue"%>
        </div>
      </div>
    </div>

    <div class="next-payment">
      <div class="container m-5 mx-auto">
        <div class="row">
          <div class="col-sm">
            <div class="text-center">
              <h1>Relevé de remboursement</h1>
            </div>
            <table class="table my-5">
              <tr>
                <td class="col-ms-2 bg-gradient-primary text-middle-blue">Solde au 26 Mai 2021</td>
                <td class="col-ms-2">-400</td>
                <td class="text-center bg-gradient-primary text-middle-blue">Date d'échéance</td>
                <td class="text-center">30 Mai 2021</td>
              </tr>
              <tr>
                <td class="col-ms-2 bg-gradient-primary text-middle-blue">Prelevement à venir</td>
                <td class="col-ms-2"> 200€ </td>
                <td class="text-center bg-gradient-primary text-middle-blue">PDate prochaine échéance</td>
                <td class="text-center">31 Mai 2021</td>
              </tr>
              <tr>
                  <td class="col-ms-2 bg-gradient-primary text-middle-blue">Intérêts Prélevés</td>
                  <td class="col-ms-2"> 20€ </td>
                  <td class="text-center bg-gradient-primary text-middle-blue">Taux</td>
                  <td class="text-center">2%</td>
              </tr>
              <tr>
                  <td class="col-ms-2 bg-gradient-primary text-middle-blue">Durée</td>
                  <td class="col-ms-2"> 12 mois </td>
                  <td class="text-center bg-gradient-primary text-middle-blue">Echéances restantes</td>
                  <td class="text-center">1 mois</td>
              </tr>
            </table>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="historical-payment">
    </div>
  </div>
</div>


