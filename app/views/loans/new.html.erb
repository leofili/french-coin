<div class="add-a-loan mb-5">
    <div class="row">
      <div class="col-12 col-lg-6 offset-lg-3">
        <h3 class="text-center">New loan</h3>
        <% @loan = Loan.new(user_id: current_user.id) %>
        <%= simple_form_for(@loan) do |f| %>
          <%= f.input :name, :label => "Loan name" %>
          <%= f.submit%>
        <% end %>
      </div>
    </div>
  </div>
  