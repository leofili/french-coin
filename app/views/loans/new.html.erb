<div class="add-a-loan mb-5 mx-5 mt-4" id="new-loan" data-controller="new-loan">
  <h2 class="titre-new-loan text-center">Nouvel Emprunt</h2>
  <div class="row align-items-start custom-line">
    <div class="col background-new-loan border-right-frenchcoin">
      <div class="container">
        <%= simple_form_for(@loan) do |f| %>
          <div class="row">
            <div class="col intitule-new-loan">
              <h4>Intitulé de mon emprunt</h4>
              <%= f.input :name, label: false, placeholder: "Travaux, achat de maison ..." ,class:"shadow" %>
            </div>
          </div>
          <div class="row mt-4">
            <div class="col">
              <div class="input_amount_loan">
                <div class="dropboxnewloan d-flex justify-content-between"> 
                  <h4 class="mt-1">Devise de mon emprunt</h4>
                  <div class="dropboxnewloan1">
                    <%= f.input :amount_currency, wrapper_html: { class: "switch-field"}, label: false , wrapper: :horizontal_multi_select, as: :radio_buttons, collection: ["Euros", "Ethereums"], checked: "Euros" %>
                  </div>
                </div>
                <div class="d-flex align-items justify-content-between">
                  <h4 class="mt-3">Montant de mon emprunt</h4>
                  <%= f.input :amount_cents, class: "amount_cents shadow-sm", label: false, placeholder: "Exemple: 500, 1000, 2500 ..." %>
                </div>
              </div>
            </div>
          </div>
          <div class="row mt-4">
            <div class="col">
              <fieldset id="fieldset1">
                  <legend class="legend_new_loan d-flex justify-content-between"><h4 class="mt-3">Durée de l'emprunt (mois)</h4>
                    <div class="d-flex">
                      <label class="toggle-new-load choice-toggle selected">
                        6
                        <input  class="input_radio_new_loan" name="month" type="radio" value="6" checked />
                      </label>
                      <label class="toggle-new-load choice-toggle">
                        12
                        <input  class="input_radio_new_loan" name="month" type="radio" value="12" />
                      </label>
                      <label class="toggle-new-load choice-toggle">
                        24
                        <input class="input_radio_new_loan" name="month" type="radio" value="24" />
                      </label>
                      <label class="toggle-new-load choice-toggle">
                        36
                        <input class="input_radio_new_loan" name="month" type="radio" value="36" />
                      </label>
                    </div>
                  </legend>
              </fieldset>
            </div>
          </div>
          <div class="row mt-4">
            <div class="col">
              <fieldset id="fieldset2">
                  <legend class="legend_new_loan d-flex justify-content-between"><h4 class="mt-3">Répartition Emprunt/Garantie (en %)</h4>
                    <div class="d-flex">
                      <label class=" ml-2 toggle-new-load choice-toggle2 selected">
                        25%
                        <input class="input_radio_new_loan" name="lvt" type="radio" value="25" checked />
                      </label>
                      <label class="toggle-new-load choice-toggle2">
                        33%
                        <input class="input_radio_new_loan" name="lvt" type="radio" value="33" />
                      </label>
                      <label class="toggle-new-load choice-toggle2">
                        50%
                        <input class="input_radio_new_loan" name="lvt" type="radio" value="50" />
                      </label>
                    </div>
                  </legend>
              </fieldset>
            </div>
          </div>
          <div class="row mt-4">
            <div class="col">
              <div class="loan_collateral_cents">
                <%= f.input :collateral_cents, as: :hidden, :input_html => { :value => 0  }, readonly: true %>
              </div>
            </div>
          </div>
          <%= f.input :interest_cents, as: :hidden , :input_html => { :value => 0 } %>
          <div class="loan_interest_rate">
            <%= f.input :interest_rate, as: :hidden, :input_html => { :value => 1 } %>
          </div>
      </div>
    </div>
    <div class="col my-auto">
      <div class="row px-3 pb-4">
        <div class="col border-bottom-frenchcoin">
          <div class="apr_new_loan input_amount_loan">
            <div class="dropboxnewloan d-flex align-items justify-content-between">
              <div class="dropboxnewloan2 d-flex font-weight-bold">Garantie nécessaire
                <%= f.input :collateral_currency, wrapper_html: { class: "switch-field ml-2"}, label: false, wrapper: :horizontal_multi_select, as: :radio_buttons, collection: ["Euros", "Ethereums"], checked: "Euros" %>
              </div>
              <div class="collateral_span_new_loan d-flex justify-content-end">
                <span class="collateral odometer color-span-collat-loan" value="0" id="odometer3">0</span>
                <span class="devise-new-loan">/EUR</span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <br>
      <div class="row px-3 pt-5">
        <div class="col">
          <div class="interest_new_loan">
            <div class="interest_span_new_loan d-flex align-items justify-content-between">
            <span class="d-flex justify-content-between size-font-interest">Montant d'intérêt total (en €)</span>
            <div>
              <span class="interest odometer color-span-interest-loan" name="interest" value="0" id="odometer">0</span>
              <span class="devise-new-loan-interest">/EUR</span>
            </div>
            </div>
          </div>
        </div>
      </div>
      <div class="row px-3 py-3">
        <div class="col">
          <div class="apr_new_loan">
            <div class="apr_span_new_loan d-flex align-items justify-content-between">
            <span>Intérêt brut (en %)</span>  
              <div>
                <span class="apr odometer color-span-apr-loan" id="odometer2" value="1">1.00</span>
                <span class="pourcentage-new-loan-interest">%</span>
              </div>
            </div>
          </div>
        </div>
      </div>
          <div class="row">
            <div class="col text-center mt-2">
              <%= f.submit 'Création de mon emprunt', class: "btn btn-primary" %>
            </div>
          </div>
          <%# fin du simple form %>
      <% end %>
    </div>
  </div>
</div>
